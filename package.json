{
  "name": "gathering-gg-client-ui",
  "productName": "Gathering",
  "version": "0.5.1",
  "description": "Client for Gathering.gg which records information about MTG Arena.",
  "main": "src/index.ts",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "tslint --project tsconfig.json --force"
  },
  "keywords": [],
  "author": "Gathering.gg",
  "license": "MIT",
  "build": {
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO",
            "icon": "./src/images/icon/icon.icns"
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "setupIcon": "./src/images/icon/icon.ico"
          }
        }
      ],
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "icon": "./src/images/icon/icon.png",
        "packageManager": "yarn"
      },
      "electronWinstallerConfig": {
        "name": "Gathering.gg"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "Gathering.gg"
      }
    }
  },
  "dependencies": {
    "@types/app-root-dir": "^0.1.0",
    "@types/auto-launch": "^5.0.0",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/electron-store": "^1.3.0",
    "@types/lodash": "^4.14.120",
    "@types/opn": "^5.1.0",
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "@types/semver": "^5.5.0",
    "app-root-dir": "^1.0.2",
    "auto-launch": "^5.0.5",
    "axios": "^0.18.0",
    "bootstrap": "4.2.1",
    "electron-compile": "6.4.4",
    "electron-devtools-installer": "2.2.4",
    "electron-log": "^2.2.17",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^2.0.0",
    "lodash": "^4.17.11",
    "opn": "^5.4.0",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-hot-loader": "4.6.3",
    "reactstrap": "7.1.0",
    "semver": "^5.6.0",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "electron-forge": "5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "tslint": "5.12.1",
    "typescript": "3.2.4"
  }
}
